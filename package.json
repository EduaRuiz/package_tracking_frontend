{
  "name": "package-tracking-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build-and-deploy": "npm run build && firebase deploy",
    "bd": "npm run build && firebase deploy",
    "test:cov": "jest --coverage",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^14.2.7",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@popperjs/core": "^2.11.7",
    "bootstrap": "^5.2.3",
    "install": "^0.13.0",
    "jquery": "^3.6.4",
    "moment": "^2.29.4",
    "rxjs": "~7.5.0",
    "sweetalert2": "^11.7.3",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.10",
    "@angular/cli": "~14.2.10",
    "@angular/compiler-cli": "^14.2.0",
    "@compodoc/compodoc": "^1.1.19",
    "@types/bootstrap": "^5.2.6",
    "@types/jest": "^29.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "jest-preset-angular": "^13.0.1",
    "prettier": "^2.3.2",
    "typescript": "~4.7.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "globalSetup": "jest-preset-angular/global-setup",
    "coveragePathIgnorePatterns": [
      "/index\\.ts$",
      ".module\\.ts$",
      ".mock\\.ts$",
      ".mocks\\.ts$",
      "main\\.ts$"
    ],
    "moduleNameMapper": {
      "@use-cases/(.*)": "<rootDir>/src/app/application/use-cases/$1",
      "@domain/(.*)": "<rootDir>/src/app/domain/$1",
      "@application/(.*)": "<rootDir>/src/app/application/$1",
      "@infrastructure/(.*)": "<rootDir>/src/app/infrastructure/$1",
      "@presentation/(.*)": "<rootDir>/src/app/presentation/$1"
    }
  }
}
